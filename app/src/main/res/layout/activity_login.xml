<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:paddingTop="10dp"
                android:layout_marginRight="15dp"
                android:text="WELCOME BACK"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#B9F44336"
                android:fontFamily="serif-monospace"></TextView>


            <ImageView
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:src="@drawable/copywriter"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="30dp"
                ></ImageView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/baseline_person_24"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                app:startIconTint="@color/orange"
                app:endIconMode="clear_text"
                android:padding="5dp"
                app:counterMaxLength="10"
                app:counterEnabled="true"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:id="@+id/loginemail"
                    ></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/password"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                app:startIconTint="@color/orange"
                app:endIconMode="clear_text"
                android:padding="5dp"
                app:counterMaxLength="10"
                app:counterEnabled="true"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                   android:id="@+id/loginpassword"
                    android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_arraw1"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:id="@+id/img_login"
                android:tooltipText="login"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New User? Click here to login"
                android:textSize="15sp"
                android:gravity="bottom|center"
                android:id="@+id/txtR"
                android:fontFamily="sans-serif"></TextView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>